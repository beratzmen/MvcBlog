@model IEnumerable<MvcBlog.Models.Kategori>
@{ 
    Layout = null;
}
<h4>Kategoriler</h4>
<div class="row">
    <div class="col-lg-6">
        @foreach (var item in Model)
        {
            <ul class="list-unstyled mb-0">
                <li>
                    <a href="/Home/KategoriMakale/@item.KategoriId">@item.KategoriAdi (@item.Makales.Count())</a>
                </li>
            </ul>
        }  
    </div>
</div>

