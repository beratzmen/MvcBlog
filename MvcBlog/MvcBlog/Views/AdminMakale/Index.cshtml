@using PagedList
@using PagedList.Mvc
@model IPagedList<MvcBlog.Models.Makale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Makaleler</h2>

<p>
    @Html.ActionLink("Yeni Makale", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Kategori Adı")
        </th>
        <th>
            @Html.Label("Başlık")
        </th>
       
        <th>
            @Html.Label("Foto")
        </th>
        <th>
            @Html.Label("Tarih")
        </th>
        <th>
            @Html.Label("Okunma")
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Baslik)
        </td>
       
        <td>
            @*@Html.DisplayFor(modelItem => item.Foto)*@
           <img width="80" src="@item.Foto"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarih)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Okunma)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.MakaleId }) |
            @Html.ActionLink("Detay", "Details", new { id = item.MakaleId }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.MakaleId })
        </td>
    </tr>
}
</table>


<ul class="pagination justify-content-center mb-4">
    <li class="page-item">
        <div class="row">
            <div class="col-md-18 pagination-lg">
                <div class="pagedList pagination-lg">
                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }), PagedListRenderOptions.Classic)
                </div>
            </div>
        </div>
    </li>
</ul>